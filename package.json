{
  "name": "moncy-express-ts-starter",
  "version": "1.0.0",
  "description": "Express.js + TypeScript Starter: Kickstart with this boilerplate, integrating Supabase and DrizzleORM!",
  "main": "index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch --clear-screen=false --ignore 'node_modules/**' --inspect ./src/server.ts",
    "build:server": "tsx ./src/server.ts",
    "typecheck": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "drizzle:generate": "drizzle-kit generate:pg",
    "drizzle:push": "drizzle-kit push:pg",
    "drizzle:seed": "tsx ./src/drizzle/seed.ts"
  },
  "author": "Moncy Gopalan",
  "license": "ISC",
  "dependencies": {
    "chalk": "^5.3.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.28.2",
    "drizzle-zod": "^0.5.0",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.0.0",
    "http-status": "^1.6.2",
    "morgan": "^1.10.0",
    "nanoid": "^4.0.2",
    "postgres": "^3.3.5",
    "typescript": "^5.1.6",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@total-typescript/ts-reset": "^0.5.1",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.5.1",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "drizzle-kit": "^0.19.13",
    "eslint": "^8.47.0",
    "prettier": "^3.0.2",
    "tsx": "^3.12.7"
  }
}
